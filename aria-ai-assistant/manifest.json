{
  "manifest_version": 2,
  "name": "ARIA - AI Assistant",
  "version": "1.0.0",
  "author": "ARIA Contributors",
  "homepage_url": "https://gitlab.com/thunderbird-extension/ai-mail-assistant",
  "description": "AI-powered email assistant: Generate intelligent responses, use voice input, support for OpenAI & local AI models. Multi-language support in 14 languages.",
  "applications": {
    "gecko": {
      "id": "aria-ai-assistant@thunderbird.extension",
      "strict_min_version": "115.0"
    }
  },
  "icons": {
    "16": "icons/ai-icon_16.png",
    "32": "icons/ai-icon_32.png",
    "48": "icons/ai-icon_48.png",
    "128": "icons/ai-icon_128.png"
  },
  "permissions": [
    "storage",
    "messagesRead",
    "compose",
    "tabs",
    "accountsRead",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/ai-icon_16.png",
      "32": "icons/ai-icon_32.png"
    }
  },
  "compose_action": {
    "default_icon": {
      "16": "icons/ai-icon_16.png",
      "32": "icons/ai-icon_32.png"
    },
    "default_popup": "popup.html",
    "default_title": "ARIA - AI Assistant"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"]
  }
}
