{
  "manifest_version": 2,
  "name": "AI Mail Assistant",
  "version": "1.0",
  "description": "Antworten auf E-Mails mit AI und Spracheingabe generieren.",
  "applications": {
    "gecko": {
      "id": "ai-mail-assistant@example.com"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "messagesRead",
    "compose"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "AI Mail Assistant"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  }
}
